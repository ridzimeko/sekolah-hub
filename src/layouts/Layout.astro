---
interface Props {
  title: string;
  description: string;
}

import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";

// Hero image vector
import heroVector from "../../public/vector.svg";
import studentHero from "../../public/student_hero.png";

const { title, description } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class:list={['web-header', { absolute: currentPath.startsWith("/article") }]}>
      <!-- navbar -->
      <Navbar />

      <!-- hero -->
      <div class="hero-head-wrapper">
        <section class="hero-text-container">
          <slot name="title" />
          <slot name="subtitle" />
          <div class="hero-button-container">
            <slot name="button" />
          </div>
        </section>
        {
          !currentPath.startsWith("/article") && (
            <section class="hero-image">
              <Image src={heroVector} alt="Shape" width={520} />
              {currentPath == "/" && (
                <Image
                  class="image-absolute"
                  src={studentHero}
                  alt=""
                  width={420}
                />
              )}
            </section>
          )
        }
      </div>
    </div>
    <!-- slot -->
    <div class="app-slot">
      <slot />
    </div>
    <Footer />
  </body>
</html>
<style is:global lang="scss">
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%;
    );
  }
  html {
    font-family: "Poppins", system-ui, sans-serif;
  }

  body {
    margin: 0;
  }

  .web-header {
    background-color: #6100c1;
    height: 110svh;
    z-index: -10;
    padding: 0 5.2rem;

    &.absolute {
      position: absolute;
      left: 0;
      top: 0;
      right: 0;
    }
  }

  .hero-head-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding-top: 8rem;
    color: white;

    .hero-text-container {
      max-width: 600px;

      h1 {
        font-size: 3rem;
        margin-bottom: 0;
        line-height: 1;
      }

      p {
        font-size: 1.2rem;
      }
    }

    .hero-button-container {
      margin: 3.6rem 0;
    }

    .hero-image {
      position: relative;

      .image-absolute {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        margin: 0 auto;
        z-index: 10;
      }
    }
  }

  .app-slot {
    padding: 0 5.2rem;
    margin-bottom: 6rem;
  }
</style>
