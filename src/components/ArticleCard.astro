---
import imginfo1 from "../../public/photos/unsplash_zFSo6bnZJTw.png";
import imginfo2 from "../../public/photos/unsplash_gsRi9cWCIB0.png";
import imginfo3 from "../../public/photos/unsplash_NTur2_QKpg0.png";
import { Image } from "astro:assets";
---

<div class="article-card-container">
  <Image class="card-img" src={imginfo2} alt="" />
  <div class="card-body">
    <div class="card-label">
      <p>Pengumuman</p>
    </div>
    <div class="card-header">
      <h3>Kegiatan Belajar Mengajar Offline Dimulai</h3>
      <p>Kegiatan yang adakan saat siswa selesai melakuakan studi sekolah</p>
    </div>
  </div>
</div>

<style>
  .article-card-container {
    border-radius: 16px;

    &.card-body {
      align-self: stretch;
      height: 178px;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      gap: 16px;
      display: flex;
    }

    &.card-img {
      height: 180px;
      background: linear-gradient(0deg, #c4c4c4 0%, #c4c4c4 100%);
      border-radius: 24px;
    }

    & .card-label {
      display: inline-block;
      padding: 0.2rem 0.8rem;
      background: #732f9d;
      border-radius: 20px;

      & p {
        color: white;
        font-size: 0.68rem;
      }
    }

    .card-header {
      & h3 {
        width: 357.33px;
        color: #404040;
        font-size: 1.2rem;
        font-weight: 500;
      }

      & p {
        width: 357.33px;
        color: #787878;
        font-size: 16px;
        word-wrap: break-word;
      }
    }
  }
</style>
